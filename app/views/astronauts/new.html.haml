#content-wrapper
  %section#portfolio.white
    .container
      .gap
      .center.gap.fade-down.section-heading
        %h2.main-title New astronaut
        %hr/
        %p Lorem ipsum.
      .gap
        = simple_form_for @astronaut, :html => { :class => 'validate-form' } do |f|
          = render :partial => "form", :locals => { :f => f }
          .row
            .col-xs-6.text-left
              %a.btn.btn-discard{ :href => astronauts_path }
                Cancel
            .col-xs-6.text-right
              %button.btn.btn-success{:type => "submit"}
                Submit